<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

  <changeSet id="20251003000001-1" author="jhipster">
    <!-- Add the new column -->
    <addColumn tableName="skill">
      <column name="years_of_experience" type="integer">
        <constraints nullable="false" />
      </column>
    </addColumn>

    <!-- You can add an <update> tag here to migrate data if you want -->
    <!-- For example, to set a default value -->
    <update tableName="skill">
      <column name="years_of_experience" value="0"/>
      <where>years_of_experience is null</where>
    </update>

    <!-- Drop the old column -->
    <dropColumn tableName="skill" columnName="percentage"/>
  </changeSet>
</databaseChangeLog>
